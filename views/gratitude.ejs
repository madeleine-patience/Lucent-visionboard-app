            <form  action="/gratitude/createGratitude" method="POST">
                 <div class="flex flex-col  w-10/12 mx-auto	">
                 <label  for="gratitudeItem1" class="form-label text-center text-3xl font-serif text-center my-6 m-auto  ">Log Gratitude</label>
                 <textarea type="text" class="form-control bg-gray-300 rounded-lg mt-2.5	h-32 bg-fontLight" id="item" name="item"> </textarea>

                 <label for="gratitudeItem2" class="form-label"></label>
